<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.scu.edu.mapper.AdminMapper">
    <insert id="add">
        insert into t_admin(username,nickname,password) values(#{username},#{nickname},#{password})
    </insert>
    <update id="update">
        update t_admin set username=#{username},nickname=#{nickname},password=#{password} where id=#{id}
    </update>
    <delete id="delete">
        delete from t_admin where id=#{id}
    </delete>
    <delete id="deleteByIds">
        delete from t_admin where id in
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <select id="findById" resultType="cn.scu.edu.domain.Admin">
        select * from t_admin where id=#{id}
    </select>
    <select id="findAll" resultType="cn.scu.edu.domain.Admin">
        select * from t_admin
    </select>
</mapper>
